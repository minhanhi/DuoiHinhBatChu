            <!-- Reward Item 4: Bật thông báo -->
            <LinearLayout
                android:id="@+id/reward4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E8E8E8"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bell"
                    android:layout_marginEnd="16dp"
                    app:tint="#999999" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bật thông báo"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coin"
                    app:tint="#666666" />
            </LinearLayout>

            <!-- Reward Item 5: Đạt level 10 -->
            <LinearLayout
                android:id="@+id/reward5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E8E8E8"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_target"
                    android:layout_marginEnd="16dp"
                    app:tint="#999999" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đạt level 10"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coin"
                    app:tint="#666666" />
            </LinearLayout>

            <!-- Reward Item 6: Thưởng xu ngẫu nhiên -->
            <LinearLayout
                android:id="@+id/reward6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E8E8E8"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gift"
                    android:layout_marginEnd="16dp"
                    app:tint="#999999" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thưởng xu ngẫu nhiên"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <LinearLayout
                    android:id="@+id/btnReward6Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_reward_button"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="claimReward6">

                    <TextView
                        android:id="@+id/btnReward6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_coin"
                        android:layout_marginStart="4dp"
                        app:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

